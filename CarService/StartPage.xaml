<Page x:Class="CarService.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarService"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Начальная страница">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Режим пользователя" Style="{StaticResource ButtonsStyle}" Click="UserMode"/>
            <Button Content="Режим администратора" Style="{StaticResource ButtonsStyle}" Click="AdminMode"/>
        </StackPanel>
    </Grid>
</Page>
